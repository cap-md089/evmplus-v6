{
	"name": "server-jest-config",
	"version": "1.0.6",
	"private": true,
	"description": "Adds configuration options for jest that will start up and tear down a MySQL instance",
	"author": "Andrew Rioux <rioux.d.andrew@gmail.com>",
	"license": "GPL-2.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com//cap-md089/evmplus-org-com-v6.git"
	},
	"main": "dist/index.js",
	"devDependencies": {
		"@types/debug": "^4.1.5",
		"@types/dockerode": "^3.2.1",
		"dockerode": "^3.2.1",
		"typescript": "^4.0.5"
	},
	"scripts": {
		"build": "tsc --project tsconfig.build.json",
		"check": "tsc --project tsconfig.build.json --noEmit",
		"test": "jest --runInBand"
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.test.json",
				"diagnostics": false
			}
		},
		"testRegex": "/src/.*\\.test\\.ts",
		"testPathIgnorePatterns": [
			"/node_modules/"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"moduleFileExtensions": [
			"ts",
			"js",
			"json",
			"node"
		]
	},
	"dependencies": {
		"debug": "^4.3.1"
	}
}
