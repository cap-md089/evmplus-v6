{
	"name": "common-lib",
	"version": "1.27.0",
	"description": "Common types for EvMPlus.org to use in TypeScript",
	"author": "Andrew Rioux",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "tsc --build tsconfig.build.json",
		"watch": "tsc --build tsconfig.build.json --watch",
		"check": "tsc --build tsconfig.build.json --noEmit",
		"test": "jest",
		"lint": "eslint src/**/*.{ts,tsx} src/*.{ts,tsx}"
	},
	"dependencies": {
		"debug": "^4.3.1",
		"luxon": "^1.24.1",
		"ramda": "^0.27.0"
	},
	"license": "GPL-2.0",
	"private": true,
	"devDependencies": {
		"@types/debug": "^4.1.5",
		"@types/jest": "^26",
		"@types/luxon": "^1.24.1",
		"@types/node": "^13.13.4",
		"@types/pdfmake": "^0.1.14",
		"@types/ramda": "^0.27.3",
		"@types/xlsx": "^0.0.36",
		"@typescript-eslint/eslint-plugin": "^4.25.0",
		"@typescript-eslint/parser": "^4.25.0",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^8.3.0",
		"jest": "^26",
		"jest-watch-typeahead": "^0.6.1",
		"ts-jest": "^26",
		"tslint": "^5.19.0",
		"tslint-config-prettier": "^1.13.0",
		"typescript": "^4.2.3"
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.test.json",
				"diagnostics": false
			}
		},
		"testRegex": "(/src/__tests__/.*\\.ts)",
		"testPathIgnorePatterns": [
			"node_modules/",
			"src/.*.snap"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"moduleFileExtensions": [
			"ts",
			"js",
			"json",
			"node"
		]
	}
}
