	"version": "2.0.0",
	"tasks": [
		{
			"type": "gulp",
			"task": "ts",
			"problemMatcher": [
				"$tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "gulp",
			"task": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"isBackground": true
		},
		{
			"type": "gulp",
			"task": "default",
			"problemMatcher": [
				"$tsc-watch"
			],
			"isBackground": true
		}
	]
}