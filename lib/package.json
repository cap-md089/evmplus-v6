{
  "name": "common-lib",
  "version": "1.3.2",
  "description": "Common types for CAPUnit.com to use in TypeScript",
  "author": "Andrew Rioux",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest"
  },
  "dependencies": {
    "@types/node": "^13.1.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "typescript": "^3.7.2",
    "jest": "^21.2.1",
    "ts-jest": "^21.2.4",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.13.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json",
        "diagnostics": false
      }
    },
    "testRegex": "(/src/__tests__/.*\\.ts)",
    "testPathIgnorePatterns": [
      "node_modules/",
      "src/.*.snap"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
